# app config
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api

# cors config
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type, Accept, Authorization
CORS_CREDENTIALS=true
CORS_PREFLIGHT_CONTINUE=false
CORS_OPTIONS_SUCCESS_STATUS=204

# swagger config
SWAGGER_TITLE=API Documentation
SWAGGER_DESCRIPTION=API documentation for the application
SWAGGER_VERSION=1.0
SWAGGER_TAG=API
SWAGGER_PATH=/api/docs

# throttler config
THROTTLER_TTL=60
THROTTLER_LIMIT=10

# csurf config
CSURF_MAX_AGE=3600
